<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="130dp">

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Classic"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="380dp" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Tropical Drinks"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="380dp" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Alcohol Free"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="380dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="161dp"
            android:layout_height="43dp"
            android:layout_marginTop="144dp"
            android:gravity="center"
            android:text="Categories"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Mocktails"
            android:textSize="9sp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="480dp" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Punches"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="480dp" />

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="GARNISHES"
            android:textSize="9sp"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="480dp" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="373dp"
            android:layout_height="38dp"
            android:background="@drawable/searchview_background"
            android:iconifiedByDefault="false"
            android:queryHint="Search..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cocktail_name" />

        <TextView
            android:id="@+id/cocktail_name"
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="Discover Cocktails"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>